<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InterviewTestApp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/responsive.css" rel="stylesheet" />
    <link href="~/css/style.css?v1.1" rel="stylesheet" />
    <link href="~/css/pace.css" rel="stylesheet" />
    <link href="~/lib/notification/WANotification.css" rel="stylesheet" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/personal.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/notification/WANotification.js"></script>


</head>
<body>
    <div class="title">
        <img src="~/img/title.png" />
    </div>
    <nav class="navbar navbar-fixed-left navbar-minimal animate" role="navigation">
        <div class="navbar-toggler animate">
            <span class="menu-icon"></span>
        </div>
        <ul class="navbar-menu animate">
            <li>
                <a href="@Url.Action("Index","Home")" class="animate">
                    <span class="desc animate"> Home </span>
                    <i class="fa fa-home fa-2x" aria-hidden="true"></i>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index","Images")" class="animate">
                    <span class="desc animate"> Image List </span>
                    <i class="fa fa-list fa-2x" aria-hidden="true"></i>
                </a>
            </li>
        </ul>
    </nav>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="page-scroll d-none" data-original-title="" title="">
        <a href="#">
            <i class="fa fa-arrow-up" aria-hidden="true"></i>
        </a>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
