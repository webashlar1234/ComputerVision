
@{
    ViewData["Title"] = "Image";
}

<section class="">
    <div class="container section-padding">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 ml-auto d-flex align-items-center mt-4 mt-md-0">
                <div class="text-center upload-img-content">
                    <input type="file" name="file" id="uploadImage" class="d-none" accept="image/gif, image/jpeg, image/png,image/bmp" />
                    <label for='uploadImage' class="pointer">
                        <img src="img/upload-img-1.png" class="img-fluid" alt="Responsive image"><br />
                        <span class="file btn btn-lg btn-primary btn-photo-check">
                            Photo Check
                        </span>
                    </label>

                    <div class="text-left text-white notes">
                        Requirements:
                        <ul>
                            <li>
                                Supported image formats: JPEG, PNG, GIF, BMP.
                            </li>
                            <li>
                                Image file size must be less than 4MB.
                            </li>
                            <li>
                                Image dimensions should be greater than 50 x 50.
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <div class="selected-img">
                    <div id="result">
                        <img src="img/No_Image.jpeg" class="img-fluid" alt="Responsive image">
                    </div>
                    <h5 class="text-center" id="imgId">
                        <span class="spin-loader fnt-size">
                            <i class="fa fa-spinner spin ml-1 text-white"></i>
                            <span class="text-white">Loading. . .</span>
                        </span>
                    </h5>
                </div>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel-group" id="accordion">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 data-toggle="collapse" data-parent="#accordion" href="#collapse1"
                                class="panel-title expand">
                                <span class="right-arrow pull-right">+</span>
                                <a href="#">TAGS</a>
                                <span class="spin-loader tag-spiner fnt-size mr-3">
                                    <i class="fa fa-spinner spin ml-1 text-white"></i>
                                    <span class="text-white">Loading. . .</span>
                                </span>

                            </h4>
                        </div>
                        <div id="collapse1" class="panel-collapse collapse">
                            <div class="panel-body">
                                <div class="tags-item">
                                    <div class="tags" id="divTags">
                                        <p>No tags available.</p>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/js/custom/home.js?v1"></script>